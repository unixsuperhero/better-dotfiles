#!/bin/bash

d="$(pwd)"

winname=$(printf "testing%d" $(tmux list-windows | wc -l))
cmd="teefifo $@ && tmux renamew -t ${winname} pass || tmux renamew -t ${winname} FAIL; echo -n 'press ENTER to close'; read x"
fullcmd=$(printf "tmux neww -c %s -n %s 'bash \"%s.sh\"'" "$d" "$winname" "$winname")

echo "$cmd" >"${winname}.sh"
echo "catting the file:"
cat "${winname}.sh"
echo "$fullcmd"

tmux neww -c "$d" -n "${winname}" "bash ${winname}.sh; rm ${winname}.sh"

