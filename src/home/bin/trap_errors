#!/bin/bash

print_error_info () {
    errorcode=$?

    printf "\n %13s--%-s" '-------------'  "-------------        "
    printf "\n %13s  %-s" '------  ERROR'  "INFO  -------        "
    printf "\n %13s--%-s" '-------------'  "-------------        "
    printf "\n %16s: %-s" '  Bad Command'  "$BASH_COMMAND        "
    printf "\n %16s: %-s" ' Return Value'  "$errorcode           "
    printf "\n %16s: %-s" '  Line Number'  "${BASH_LINENO[0]}    "
    printf "\n %13s--%-s" '-------------'  "-------------        "
    printf "\n %13s--%-s" '-------------'  "-------------        "
    printf "\n          "

    # ...cleanup or other error handling...

    exit $errorcode
}

trap print_error_info ERR

